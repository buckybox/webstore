= render partial: 'webstore/sidebar'
= render partial: 'webstore/order', object: order

= simple_form_for(customise_order, html: { class: 'form-inline' }) do |f|
  = f.input :cart_id, as: :hidden

  - if customise_order.exclusions?
    #webstore-customise.row-fluid.webstore-section
      .span12
        .row-fluid
          .span12= f.input :has_customisations, as: :boolean, label: t('webstore.customise_order.customise_product'), wrapper: :inline_checkbox, wrapper_html: { class: 'checkbox-header' }
        #webstore-customisations.row-fluid
          .span12
            .dislikes_input.clearfix
              = f.input :dislikes, label: "<i class='icon-minus-sign'></i>".html_safe, collection: customise_order.stock_list, input_html: { multiple: true, data: { placeholder: t('webstore.customise_order.exclude_items'), limits: customise_order.exclusions_limit} }, wrapper: :inline
            - if customise_order.substitutions?
              .likes_input.clearfix
                = f.input :likes, label:  "<i class='icon-plus-sign'></i>".html_safe, collection: customise_order.stock_list, input_html: { multiple: true, data: { placeholder: t('webstore.customise_order.substitute_with_items'), limits: customise_order.substitutions_limit} }, wrapper: :inline

  - if customise_order.extras_allowed?
    #webstore-extras.row-fluid.webstore-section
      .span12
        .row-fluid
          .span12
            %h4
              %i.icon-plus
              - if customise_order.extras_unlimited?
                = t 'webstore.customise_order.add_unlimited_extras'
              - else
                = t 'webstore.customise_order.add_n_extras', limit: customise_order.extras_limit

        .row-fluid
          .span12
            %table.table.table-bordered
              = f.simple_fields_for(:extras) do |g|
                %tbody
                  = render partial: 'extra', collection: extras_list, locals: { g: g }

            = f.input :add_extra, label: false, collection: extras_list, label_method: :with_price_per_unit, input_html: { class: 'span12' }

  .row-fluid.webstore-section
    .span12= f.button :submit, t('next'), class: 'pull-right btn btn-process'
