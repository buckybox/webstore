- title('Webstore - Login', false)
= render 'webstore_sidebar'
= render partial: 'webstore_order', object: @webstore_order

= simple_form_for(:webstore_order, url: webstore_process_step_path) do |f|
  #webstore-login.row-fluid.webstore-section
    .span10
      = f.simple_fields_for(:user) do |g|
        .row-fluid
          .ten.columns= g.input :email, label: 'Enter your e-mail address', input_html: { class: 'span12' }
        #registered.row-fluid
          .ten.columns= g.input :registered, checked: @checked, label: false, collection: @registered_options, as: :radio_buttons, required: false
        #password-field.row-fluid
          .ten.columns= g.input :password, label: 'Enter your password', as: :password, input_html: { class: 'span12' }, required: false
          .row-fluid
            .ten.columns
              %i.icon-lock
              = link_to "Lost your password?", new_customer_password_path(distributor: @distributor.parameter_name)

  .row-fluid.webstore-section
    .span12= f.button :submit, 'Next', class: 'pull-right btn btn-process'
