.row.route-schedule-inputs{ id: "route-schedule-inputs-#{route.id}" }
  .twelve.columns
    = g.input :start_date, label: false, collection: route_delivery_dates(route), input_html: { class: 'schedule-start-date' }, include_blank: false, disabled: true
    = g.input :frequency, label: false, collection: frequencies, input_html: { class: 'route-schedule-frequency' }, include_blank: false, disabled: true
    .order-days
      - days.each do |name, number|
        - input_name = "days[#{number}]"
        - wrapper_id = "day-#{number}"
        = g.input input_name, label: name, input_html: { data: { enabled: route.runs_on(number) } }, wrapper_html: { id: wrapper_id }, as: :boolean, disabled: true
