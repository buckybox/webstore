- title('Webstore - Completed Order', false)
= render 'webstore_sidebar'

.row-fluid.span12
  .important Payment instructions
  = render partial: 'payment_instructions', locals: { form_object: completed.payment_instructions }

.row-fluid
  #webstore-payment.span12
    .row-fluid
      #payment.span12
        .row-fluid
          .span12.text-center.payment-title== Pay by #{completed.payment_method}
        .row-fluid
          .span9.center-row= render partial: "webstore/confirmation_#{completed.payment_method}", locals: { form_object: completed }

.row-fluid
  .important Order summary
  = render partial: 'order', object: order

.row-fluid
  #webstore-placed.span12
    .row-fluid
      .span6
        .important Deliver to
        = completed.customer_name
        %br
        = completed.customer_address
      .span6
        .important Delivery date
        = completed.next_delivery_occurrence
        %br
        = completed.schedule_description

.row-fluid
  .span12.text-center
    = link_to 'Back to webstore', webstore_store_path(completed.distributor_parameter_name), class: 'btn btn-process', id: 'webstore'
    = link_to 'My account', customer_root_path, class: 'btn btn-process', id: 'webstore-my-account'
