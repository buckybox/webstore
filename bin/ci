#!/bin/bash -eux

export CI=1
export RAILS_ENV=test
export COVERAGE=1
export SPEC_OPTS="--format p"

output="$(git submodule update --remote)"
echo -n "$output"
test -z "$output"

bundle install

bundle exec rubocop -DES
bundle exec brakeman -qz --no-progress --no-pager -w3
bundle exec bundle-audit check --update --ignore CVE-2016-10735 CVE-2019-8331 CVE-2019-16676

$(dirname $0)/check_i18n

bundle exec rspec
bundle exec cucumber
